<% if @users.empty? %>
  <tr>
    <td class="none-added">No users have been added</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
<% else %>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to full_name(user), user_path(user.id) %></td>
      <td><%= user.email %></td>
      <td><%= status(user) %></td>

      <td class='icon'>
        <%= link_to user_path(user.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } do %>
          <i class="fa fa-trash-o fa-lg"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
<% end %>