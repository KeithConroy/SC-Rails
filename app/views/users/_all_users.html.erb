<% @users.each do |user| %>
  <tr>
    <td><%= link_to full_name(user), organization_user_path(user.organization_id, user.id) %></td>
    <td><%= user.email %></td>
    <td><%= status(user) %></td>

    <td class='icon'><%= link_to organization_user_path(user.organization_id, user.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "glyphicon" do %>
      <i class="fa fa-trash-o fa-lg"></i>
    <% end %>
    </td>
  </tr>
<% end %>