<h2 class="page-header">
  <%= full_name(@user) %>
  <small> - <%= status(@user) %> <%= @user.email %>
  <span class="pull-right">
    <%= link_to 'Edit', edit_organization_user_path(@user.organization_id, @user.id) %>
