<h2 class="page-header">
  <%= link_to users_path, class: "back" do %>
    <i class="fa fa-angle-double-left"></i>
  <% end %>
  <%= full_name(@user) %>
  <small> - <%= status(@user) %> <%= @user.email %>
  <span class="pull-right">
    <%= link_to 'Edit', edit_user_path(@user.id) %>
    <%= link_to 'Delete', user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
  </small>
</h2>


<div id="selected-students" class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <div class="panel-title pull-left"> Courses - <span id="student-count"><%= @user.courses.count %></span></div>
    </div>
    <div class="event-students-table">
      <table id="scheduled-students" class="table table-condensed">
        <!-- <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead> -->
        <tbody>
          <% @user.courses.each do |course| %>
          <tr>
            <td><%= link_to course.title, course_path(course.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div id="selected-students" class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <div class="panel-title pull-left"> Events - <span id="student-count"><%= @user.events.count %></span></div>
    </div>
    <div class="event-students-table">
      <table id="scheduled-students" class="table table-condensed">
        <!-- <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead> -->
        <tbody>
          <% @user.events.each do |event| %>
          <tr>
            <td><%= link_to event.title, event_path(event.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
