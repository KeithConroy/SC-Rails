<h2 class="page-header"><i class="fa fa-user-md"></i> Users
  <small>
  <span class="pull-right">
    <%= link_to new_organization_user_path(@organization, @user), class: "btn btn-default" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </span>
  </small>
</h2>


<div id="search-parent">
  <label for="search">
    <i class="fa fa-search"></i>
  </label>
  <div class="form-group">
    <input type="text" class="form-control search" placeholder="Search">
  </div>
</div>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name &nbsp;<i class="fa fa-sort"></i></th>
          <th>Email</th>
          <th>Status &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.first_name} #{user.last_name}", organization_user_path(user.organization_id, user.id) %></td>
          <td><%= user.email %></td>
          <td><%= status(user) %></td>
          <td class='icon'><%= link_to edit_organization_user_path(user.organization_id, user.id), class: "glyphicon" do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          </td>
          <td class='icon'><%= link_to organization_user_path(user.organization_id, user.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "glyphicon" do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>