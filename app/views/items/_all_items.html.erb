<% @items.each do |item| %>
<tr>
  <td><%= link_to item.title, organization_item_path(item.organization_id, item.id) %></td>
  <td><%= item.quantity %></td>
  <td>
    <% if item.disposable %>
      <i class="glyphicon glyphicon-ok"></i>
    <% else %>
    <% end %>
  </td>

  <td class='icon'><%= link_to organization_item_path(item.organization_id, item.id), method: :delete, data: { confirm: t('inventory.are_you_sure') }, class: "glyphicon" do %>
    <i class="fa fa-trash-o fa-lg"></i>
  <% end %>
  </td>
</tr>
<% end %>