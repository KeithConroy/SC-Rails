<% content_for :title, " | #{@item.title}" %>

<h2 class="page-header edit-parent">
  <%= link_to organization_items_path(@organization), class: "back" do %>
    <i class="fa fa-angle-double-left fa-lg"></i>
  <% end %>
  <i class="fa fa-barcode"></i>
  <span class="header-edit editable"><%= @item.title %> <i class="fa fa-pencil"></i></span>
  <div class="header-edit-form">
    <form class="edit" action="<%= @item.id %>">
      <input class="edit" type="text" value="<%= @item.title %>" name="item[title]" id="item_title">
    </form>
  </div>
  <small>
  <span class="pull-right">
    <%= link_to 'Edit', edit_organization_item_path(@item.organization_id, @item.id) %>
    <%= link_to 'Delete', organization_item_path(@item.organization_id, @item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
  </small>
</h2>

<div class="details">
  <h4>Item Quantity: <small><%= @item.quantity %></small></h4>
  <h4>Disposable?: <small><%= @item.disposable %></small></h4>
  <a href="">Usage Report
    <i class="fa fa-area-chart fa-lg"></i>
    <i class="fa fa-bar-chart fa-lg"></i>
    <i class="fa fa-line-chart fa-lg"></i>
    <i class="fa fa-pie-chart fa-lg"></i>
  </a>
</div>

