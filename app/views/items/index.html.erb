<% content_for :title, " | Inventory" %>

<h2 class="page-header"><i class="fa fa-barcode"></i> Inventory
  <small>
    <div id="search-parent">
      <label for="search">
        <i class="fa fa-search"></i>
      </label>
      <div class="form-group">
        <input id="item-search" type="text" class="form-control search" placeholder="Search">
      </div>
    </div>
    <span class="pull-right">
      <a href="" class="new" data-toggle="modal" data-target="#newItemModal">
        <i class="fa fa-plus fa-lg"></i>
      </a>
    </span>
  </small>
</h2>

<%= will_paginate @items %>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Item &nbsp;<i class="fa fa-sort"></i></th>
          <th>Quantity</th>
          <th>Disposable?</th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody id="items-index">
        <%= render 'all_items' %>
      </tbody>
    </table>
  </div>
</div>

<div id="download" class="btn-group pull-right">
  <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Download <i class="fa fa-download"></i>
  </button>
  <ul class="dropdown-menu">
    <li><a href="">... as Excel <i class="fa fa-file-excel-o fa-lg"></i></a></li>
    <li><a href="">... as PDF <i class="fa fa-file-pdf-o fa-lg"></i></a></li>
  </ul>
</div>

<div class="modal fade" id="newItemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create a New Item</h4>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for @new_item, layout: :horizontal, control_col: "col-sm-9", url: organization_items_path do |f| %>
          <%= f.text_field :title %>
          <%= f.text_field :quantity %>
          <%= f.check_box :disposable %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
