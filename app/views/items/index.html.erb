<h2 class="page-header"><i class="fa fa-barcode"></i> Inventory
  <small>
  <span class="pull-right">
    <%= link_to new_organization_item_path(@organization, @item), class: "btn btn-default" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </span>
  </small>
</h2>

<div id="search-parent">
  <label for="search">
    <i class="fa fa-search"></i>
  </label>
  <div class="form-group">
    <input type="text" class="form-control search" placeholder="Search">
  </div>
</div>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Item &nbsp;<i class="fa fa-sort"></i></th>
          <th>Quantity</th>
          <th>Disposable?</th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.title, organization_item_path(item.organization_id, item.id) %></td>
          <td><%= item.quantity %></td>
          <td>
            <% if item.disposable %>
              <i class="glyphicon glyphicon-ok"></i>
            <% else %>
            <% end %>
          </td>
          <td class='icon'><%= link_to edit_organization_item_path(item.organization_id, item.id), class: "glyphicon" do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          </td>
          <td class='icon'><%= link_to organization_item_path(item.organization_id, item.id), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: "glyphicon" do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div id="download" class="btn-group pull-right">
  <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Download <i class="fa fa-download"></i>
  </button>
  <ul class="dropdown-menu">
    <li><a href="">... as Excel <i class="fa fa-file-excel-o fa-lg"></i></a></li>
    <li><a href="">... as PDF <i class="fa fa-file-pdf-o fa-lg"></i></a></li>
  </ul>
</div>
