<h2 class="page-header"><%= t('courses.create_new') %></h2>

<%= bootstrap_form_for @course, layout: :horizontal, control_col: "col-sm-9", url: organization_courses_path do |f| %>
  <%= f.text_field :title, label: t('courses.self') %>
  <%= f.select(:instructor_id, @faculty) %>
  <%= f.submit %>
<% end %>