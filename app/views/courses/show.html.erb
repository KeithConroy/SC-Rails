<% content_for :title, " | #{@course.title}" %>

<h2 class="page-header edit-parent">
  <%= link_to organization_courses_path(@organization), class: "back" do %>
    <i class="fa fa-angle-double-left fa-lg"></i>
  <% end %>
  <i class="fa fa-users"></i>
  <span class="header-edit editable"><%= @course.title %> <i class="fa fa-pencil"></i></span>
  <div class="header-edit-form">
    <form class="edit" action="<%= @course.id %>">
      <input class="edit" type="text" value="<%= @course.title %>" name="course[title]" id="course_title">
    </form>
  </div>
  <small>
  <span class="pull-right">
    <%= link_to 'Edit', edit_organization_course_path(@course.organization_id, @course.id) %>
    <%= link_to 'Delete', organization_course_path(@course.organization_id, @course.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
  </small>
</h2>

<div class="details">
  <h4>Instructor: <small><%= full_name(@course.instructor) if @course.instructor %></small></h4>
</div>


<div class="row col-md-12">
  <div class="col-md-6">

    <div id="search-n-go-parent">
      <label for="search">
        <i class="fa fa-search"></i>
      </label>
      <div class="form-group">
        <input id="<%= @course.id %>" type="text" class="form-control search-n-go modify-course-search" placeholder="Add Students">
      </div>
      <div>
        <table class="table table-hover search-results">
        </table>
      </div>
    </div>

  </div>
  <!-- Nav tabs -->
  <div class='col-md-6'>


    <!-- Tab panes -->
        <div class="panel panel-default">
            <div class="display-table">
              <table id="scheduled-students" class="table table-condensed table-hover">
                <%= render 'enrolled_students' %>
              </table>
            </div>
        </div>

  </div>
</div>
