
<h2 class="page-header"><i class="fa fa-book"></i> Courses</h2>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1">

      <form class="navbar-form navbar-left" role="search" accept-charset="UTF-8" action="/search" method="get">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search" id="s" name="q" type="text">
        </div>
        <button type="submit" class="btn btn-default" name="commit">Submit</button>
      </form>
      <ul class="nav navbar-nav navbar-right" data-toggle="tooltip" data-placement="top" title="New course">
        <%= link_to new_organization_course_path(@organization, @course), class: "btn btn-primary navbar-btn" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Course &nbsp;<i class="fa fa-sort"></i></th>
          <th>Instructor &nbsp;<i class="fa fa-sort"></i></th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.title, organization_course_path(course.organization_id, course.id) %></td>
          <td><%= full_name(course.instructor) %></td>
          <td><%= link_to edit_organization_course_path(course.organization_id, course.id), class: "glyphicon" do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          </td>
          <td><%= link_to organization_course_path(course.organization_id, course.id), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "glyphicon" do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>