<h2 class="page-header"><i class="fa fa-book"></i> Courses
  <small>
  <span class="pull-right">
    <%= link_to new_course_path(@course), class: "btn btn-default" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </span>
  </small>
</h2>


<div id="search-parent">
  <label for="search">
    <i class="fa fa-search"></i>
  </label>
  <div class="form-group">
    <input type="text" class="form-control search" placeholder="Search">
  </div>
</div>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Course &nbsp;<i class="fa fa-sort"></i></th>
          <th>Instructor &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.title, course_path(course.id) %></td>
          <td><%= full_name(course.instructor) %></td>
          <td class='icon'><%= link_to edit_course_path(course.id), class: "glyphicon" do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          </td>
          <td class='icon'><%= link_to course_path(course.id), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "glyphicon" do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>