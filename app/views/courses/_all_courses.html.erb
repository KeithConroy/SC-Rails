<% if @courses.empty? %>
  <tr>
    <td class="none-added">No courses have been added</td>
    <td></td>
    <td></td>
  </tr>
<% else %>
  <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.title, course_path(course.id) %></td>
      <td><%= full_name(course.instructor) %></td>

      <td class='icon'>
        <%= link_to course_path(course.id), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' } do %>
          <i class="fa fa-trash-o fa-lg"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
<% end %>