<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t('room_groups.group') %> &nbsp;<i class="fa fa-sort"></i></th>
      <th><%= t('rooms.self') %></th>
      <th class='icon'><%= t('crud.delete') %></th>
    </tr>
  </thead>
  <tbody id="room-groups-index">
    <% if @groups.empty? %>
      <tr>
        <td class="none-added"><%= t('room_groups.none_added') %></td>
        <td></td>
        <td></td>
      </tr>
    <% else %>
      <% @groups.each do |group| %>
        <tr>
          <td>
            <%= link_to group.title, organization_room_group_path(group.organization_id, group.id) %>
          </td>
          <td>
            <% group.rooms.each do |room| %>
              <%= room.title %>
            <% end %>
          </td>

          <td class='icon'>
            <%= link_to organization_room_group_path(group.organization_id, group.id), method: :delete, data: { confirm: t('room_groups.are_you_sure') } do %>
              <i class="fa fa-trash-o fa-lg" data-toggle="tooltip" data-placement="right" title="<%= t('crud.delete') %>"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>