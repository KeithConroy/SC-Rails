<% content_for :title, t('cameras.self') %>

<h2 class="page-header"><i class="fa fa-video-camera"></i> <%= t('cameras.self') %>
  <small>
    <div id="search-parent">
      <label for="search">
        <i class="fa fa-search"></i>
      </label>
      <div class="form-group">
        <input id="camera-search" type="text" class="form-control search" placeholder="<%= t('search') %>">
      </div>
    </div>
    <span class="pull-right">
      <a href="#" class="header-icon-right" data-toggle="modal" data-target="#newCameraModal">
        <i class="fa fa-plus fa-lg"></i>
      </a>
    </span>
  </small>
</h2>

<%= will_paginate @cameras %>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= t('cameras.camera') %> &nbsp;<i class="fa fa-sort"></i></th>
          <th><%= t('cameras.ip_address') %> &nbsp;<i class="fa fa-sort"></i></th>
          <th><%= t('rooms.room') %> &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'><%= t('crud.delete') %></th>
        </tr>
      </thead>
      <tbody id="cameras-index">
        <%= render 'all_cameras' %>
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="newCameraModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('cameras.create_new') %></h4>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for @new_camera, layout: :horizontal, control_col: "col-sm-9", url: organization_cameras_path do |f| %>
          <%= f.text_field :name %>
          <%= f.text_field :ip_address, label: t('cameras.ip_address') %>
          <%= f.select(:room_id, @rooms) %>
          <%= f.text_field :serial_number, label: t('cameras.serial_number') %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>