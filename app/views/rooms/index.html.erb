<h2 class="page-header"><i class="fa fa-hospital-o"></i> Rooms
  <small>
  <span class="pull-right">
    <%= link_to new_organization_room_path(@organization, @room), class: "btn btn-default" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </span>
  </small>
</h2>

<div id="search-parent">
  <label for="search">
    <i class="fa fa-search"></i>
  </label>
  <div class="form-group">
    <input id="room-search" type="text" class="form-control search" placeholder="Search">
  </div>
</div>

<%= will_paginate @rooms %>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Room &nbsp;<i class="fa fa-sort"></i></th>
          <th>Number &nbsp;<i class="fa fa-sort"></i></th>
          <th>Building &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody id="rooms-index">
        <%= render 'all_rooms' %>
      </tbody>
    </table>
  </div>
</div>