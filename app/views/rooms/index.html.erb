<h2 class="page-header"><i class="fa fa-hospital-o"></i> Rooms
  <small>
  <span class="pull-right">
    <%= link_to new_room_path(@room), class: "btn btn-default" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </span>
  </small>
</h2>

<div id="search-parent">
  <label for="search">
    <i class="fa fa-search"></i>
  </label>
  <div class="form-group">
    <input type="text" class="form-control search" placeholder="Search">
  </div>
</div>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Room &nbsp;<i class="fa fa-sort"></i></th>
          <th>Number &nbsp;<i class="fa fa-sort"></i></th>
          <th>Building &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
        <tr>
          <td><%= link_to room.title, room_path(room.id) %></td>
          <td><%= room.number %></td>
          <td><%= room.building %></td>
          <td class='icon'><%= link_to edit_room_path(room.id), class: "glyphicon" do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          </td>
          <td class='icon'><%= link_to room_path(room.id), method: :delete, data: { confirm: 'Are you sure you want to delete this room?' }, class: "glyphicon" do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>