<% content_for :title, t('rooms.self') %>

<h2 class="page-header"><i class="fa fa-hospital-o"></i> <%= t('rooms.self') %>
  <small>
    <div id="search-parent">
      <label for="search">
        <i class="fa fa-search"></i>
      </label>
      <div class="form-group">
        <input id="room-search" type="text" class="form-control search" placeholder="<%= t('search') %>">
      </div>
    </div>
    <span class="pull-right">
      <a href="#" class="header-icon-right" data-toggle="modal" data-target="#newRoomModal">
        <i class="fa fa-plus fa-lg"></i>
      </a>
    </span>
  </small>
</h2>

<%= will_paginate @rooms %>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= t('rooms.room') %> &nbsp;<i class="fa fa-sort"></i></th>
          <th><%= t('rooms.number') %> &nbsp;<i class="fa fa-sort"></i></th>
          <th><%= t('rooms.building') %> &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'><%= t('crud.delete') %></th>
        </tr>
      </thead>
      <tbody id="rooms-index">
        <%= render 'all_rooms' %>
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="newRoomModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('rooms.create_new') %></h4>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for @new_room, layout: :horizontal, control_col: "col-sm-9", url: organization_rooms_path do |f| %>
          <%= f.text_field :title %>
          <%= f.text_field :number, label: t('rooms.number') %>
          <%= f.text_field :building, label: t('rooms.building') %>
          <%= f.text_area :description, label: t('rooms.description') %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>