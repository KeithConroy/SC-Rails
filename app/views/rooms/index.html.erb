<% content_for :title, " | Rooms" %>

<h2 class="page-header"><i class="fa fa-hospital-o"></i> Rooms
  <small>
    <div id="search-parent">
      <label for="search">
        <i class="fa fa-search"></i>
      </label>
      <div class="form-group">
        <input id="room-search" type="text" class="form-control search" placeholder="Search">
      </div>
    </div>
    <span class="pull-right">
      <a href="" class="new" data-toggle="modal" data-target="#newRoomModal">
        <i class="fa fa-plus fa-lg"></i>
      </a>
    </span>
  </small>
</h2>

<%= will_paginate @rooms %>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Room &nbsp;<i class="fa fa-sort"></i></th>
          <th>Number &nbsp;<i class="fa fa-sort"></i></th>
          <th>Building &nbsp;<i class="fa fa-sort"></i></th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody id="rooms-index">
        <%= render 'all_rooms' %>
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="newRoomModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create a New Room</h4>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for @new_room, layout: :horizontal, control_col: "col-sm-9", url: organization_rooms_path do |f| %>
          <%= f.text_field :title %>
          <%= f.text_field :number %>
          <%= f.text_field :building %>
          <%= f.text_area :description %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>