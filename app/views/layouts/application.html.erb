<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= favicon_link_tag 'sc-blue.ico' %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

  <link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
  <script type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body data-controller="<%= controller.controller_name %>" data-action="<%= controller.action_name %>">
  <nav class="navbar navbar-fixed-top navbar-custom">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <% if @organization && current_user %>

            <%= link_to "SimCentered", @organization, class: 'navbar-brand' %>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                  <i class="fa fa-calendar fa-lg"></i>&nbsp; <%= t('nav.schedule') %>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('nav.calendar'), organization_events_path(@organization) %></li>
                  <li><%= link_to t('events.new'), new_organization_event_path(@organization, @event) %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                  <i class="fa fa-cog fa-lg"></i>&nbsp; <%= t('nav.manage') %>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('courses.self'), organization_courses_path(@organization) %></li>
                  <li><%= link_to t('inventory.self'), organization_items_path(@organization) %></li>
                  <li><%= link_to t('rooms.self'), organization_rooms_path(@organization) %></li>
                  <li><%= link_to t('users.self'), organization_users_path(@organization) %></li>
                </ul>
              </li>
<!--               <li>
                <div id="global-search-parent">
                  <label for="search">
                    <i class="fa fa-search"></i>
                  </label>
                  <div class="form-group">
                    <input type="text" class="form-control global-search" placeholder="Search">
                  </div>
                </div>
              </li>-->
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <a href="/organizations/<%= @organization.id %>/community">
                  <i class="fa fa-heartbeat fa-lg heart"></i>&nbsp; <%= t('nav.sc_pulse') %>
                </a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                  <i class="fa fa-user-md fa-lg"></i>&nbsp; <%= full_name(current_user) %>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('nav.profile'), organization_user_path(@organization, current_user) %></li>
                  <li><%= link_to(t('sessions.log_out'), destroy_user_session_path, :method => :delete) %></li>
                </ul>
              </li>
            </ul>

        <% else %>

            <a href="/" class='navbar-brand'>SimCentered</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#about"><%= t('welcome.about') %></a></li>
              <li><a href="#pricing"><%= t('welcome.pricing') %></a></li>
              <li><a href="#faq"><%= t('welcome.faq') %></a></li>
              <li><a href="#contact"><%= t('welcome.contact') %></a></li>
              <li><%= link_to t('sessions.sign_up'), new_organization_path(@organization) %></li>
              <li><%= link_to('Sign In', new_user_session_path)  %></li>
            </ul>

            <!-- <form class="navbar-form navbar-right">
              <div class="form-group">
                <input type="text" placeholder="Email" class="form-control">
              </div>
              <div class="form-group">
                <input type="password" placeholder="Password" class="form-control">
              </div>
              <button type="submit" class="btn btn-success">Sign in</button>
            </form> -->

        <% end %>
      </div>
    </div>
  </nav>
<!--   <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
 -->
<%
  if controller.controller_name == 'welcome'
    id = 'welcome'
    klass = ''
  else
    id = 'main'
    klass = 'container'
  end
%>
<div id="<%= id %>" class="<%= klass %>">
  <%= yield %>
</div>

<div id="footer">
  <%= link_to "English", request.parameters.merge({locale: 'en'}) %> |
  <%= link_to "German", request.parameters.merge({locale: 'de'}) %> |
  <%= link_to "Italian", request.parameters.merge({locale: 'it'}) %>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>

</body>
</html>
