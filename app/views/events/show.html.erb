<% content_for :title, " | #{@event.title}" %>

<h2 class="page-header">
  <%= link_to organization_events_path(@organization), class: "back" do %>
    <i class="fa fa-angle-double-left"></i>
  <% end %>
  <%= @event.title %>
  <small> - <%= @event.start.strftime("%a %b %e, %g at %l:%M %p %Z") %>
  <span class="pull-right">
    <%= link_to 'Edit', edit_organization_event_path(@event.organization_id, @event.id) %>
    <%= link_to 'Delete', organization_event_path(@event.organization_id, @event.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
  </small>
</h2>

<p>Instructor: <%= full_name(@event.instructor) if @event.instructor %></p>
<p><a href="<%= @event.id %>/modify">Modify</a></p>

<div class="row col-md-12">
  <div id="selected-students" class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="panel-title pull-left"> Scheduled Students - <span id="student-count"><%= @event.students.count %></span>
        </div>
      </div>
      <div class="display-table">
        <table class="table table-condensed">
          <tbody>
            <% @event.students.each do |student| %>
            <tr>
              <td><%= full_name(student) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div id="selected-rooms" class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="panel-title pull-left"> Scheduled Rooms - <span id="room-count"><%= @event.rooms.count %></span></div>
      </div>
      <div class="display-table">
        <table class="table table-condensed">
          <tbody>
            <% @event.rooms.each do |room| %>
            <tr>
              <td><%= room.title %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div id="selected-items" class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="panel-title pull-left"> Scheduled Inventory - <span id="item-count"><%= @event.items.count %></span></div>
      </div>
      <div class="display-table">
        <table class="table table-condensed">
          <tbody>
            <% @event.items.each do |item| %>
            <tr>
              <td><%= item.title %></td>
              <% if item.disposable %>
                <td>
                  <%= item.quantity %>
                </td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>