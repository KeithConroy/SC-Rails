<tbody>
  <% if @event.students.empty? %>
    <tr><td class="none-added">No students have been added</td></tr>
  <% else %>
    <% @event.students.each do |student| %>
      <tr>
        <td><%= full_name(student) %></td>
        <td class="icon">
          <a href="<%= @event.id %>/remove_student" data-student-id="<%= student.id %>" class="remove-student">
            <i class="fa fa-minus"></i>
          </a>
        </td>
      </tr>
    <% end %>
  <% end %>
</tbody>