<tbody>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <% if item.disposable %>
      <td>
        <input placeholder="<%= item.quantity %> in stock"></input>
      </td>
    <% else %>
      <td></td>
    <% end %>
    <td class="icon">
      <% if item.busy %>
        <i class="fa fa-ban busy" data-toggle="tooltip" data-placement="left" title="In Use"></i>
      <% else %>
        <a href="add_item/<%= item.id %>" class="add-item">
          <i class="fa fa-plus"></i>
        </a>
      <% end %>
    </td>
  </tr>
  <% end %>
</tbody>