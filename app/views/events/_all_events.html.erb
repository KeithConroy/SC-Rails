<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.title, event_path(event.id) %></td>
    <td><%= event.start.strftime("%b %e @ %l:%M %p") %></td>
    <td><%= event.finish.strftime("%b %e @ %l:%M %p") %></td>

    <td class='icon'>
      <%= link_to event_path(event.id), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } do %>
        <i class="fa fa-trash-o fa-lg"></i>
      <% end %>
      <!-- <a href="#" data-toggle="modal" data-target="#deleteEventModal" data-event-title="<%= event.title %>" data-event-id="<%= event.id %>"><i class="fa fa-trash-o fa-lg"></i></a> -->
    </td>
  </tr>
<% end %>