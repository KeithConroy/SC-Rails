<h2 class="page-header">Calendar
  <small>
  <span class="pull-right">
    <%= link_to new_organization_event_path(@organization, @event), class: "btn btn-default" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </span>
  </small>
</h2>

<div id='calendar'></div>

<h2 class="page-header">All Events
  <small>
    <div id="search-parent">
      <label for="search">
        <i class="fa fa-search"></i>
      </label>
      <div class="form-group">
        <input id="event-search" type="text" class="form-control search" placeholder="Search">
      </div>
    </div>
    <span class="pull-right">
      <%= link_to new_organization_event_path(@organization, @event), class: "btn btn-default" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </span>
  </small>
</h2>



<%= will_paginate @events %>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Event</th>
          <th>Start</th>
          <th>End</th>
          <th class='icon'>Edit</th>
          <th class='icon'>Delete</th>
        </tr>
      </thead>
      <tbody id="events-index">
        <%= render 'all_events' %>
      </tbody>
    </table>
  </div>
</div>
