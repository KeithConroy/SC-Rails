<% content_for :title, "New Event" %>

<h2 class="page-header">Create a New Event</h2>

<%= bootstrap_form_for @event, layout: :horizontal, control_col: "col-sm-9", url: organization_events_path do |f| %>
  <%= f.text_field :title %>
  <%= f.select(:instructor_id, @faculty) %>
  <%= f.datetime_select :start, :ampm => true, :minute_step => 15, :order => [:month, :day, :year] %>
  <%= f.datetime_select :finish, :ampm => true, :minute_step => 15, :order => [:month, :day, :year] %>
  <%= f.submit %>
<% end %>

