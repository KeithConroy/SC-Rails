<h2 class="page-header">
  <%= @organization.title %>
  <small>
  <span class="pull-right">
    <%= link_to 'Edit', edit_organization_path(@organization) %>
    <%= link_to 'Delete', organization_path(@organization), method: :delete, data: { confirm: 'Are you sure? This will delete your entire account including Events, Users, Courses, Rooms and Inventory.' } %>
  </span>
  </small>
</h2>

<h3 class="page-header">Today's Events</h3>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Event</th>
          <th>Start</th>
          <th>End</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.title, organization_event_path(event.organization_id, event.id) %></td>
          <td><%= event.start.strftime("%m-%e-%g %l:%M %p") %></td>
          <td><%= event.end.strftime("%m-%e-%g %l:%M %p") %></td>
          <td><%= link_to edit_organization_event_path(event.organization_id, event.id), class: "glyphicon" do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          </td>
          <td><%= link_to organization_event_path(event.organization_id, event.id), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: "glyphicon" do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>